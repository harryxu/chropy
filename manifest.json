{
  "manifest_version": 2,

  "name": "chropy",
  "description": "Copy selection by types.",
  "version": "1.0",

  "icons": {
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },

  "permissions": [
    "activeTab",
    "clipboardWrite",
    "contextMenus"
  ],

  "background": {
    "scripts": ["script.js"]
  }

}
